<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenderFragment"
    android:background="#151515">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/mainfont"
        android:gravity="center"
        android:text="TELL US ABOUT YOURSELF"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/mainfont"
        android:gravity="center"
        android:text="To give you a better experience and results\n we nned to know your gender."
        android:textColor="#757575"
        android:textSize="15sp"
        android:textStyle="bold">
    </TextView>


    <ImageView
        android:id="@+id/male_button"
        android:layout_width="165dp"
        android:layout_height="211dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="332dp"
        android:src="@drawable/male_logo" />

    <ImageView
        android:id="@+id/female_button"
        android:layout_width="184dp"
        android:layout_height="210dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="151dp"
        android:fontFamily="@font/mainfont"
        android:src="@drawable/female_logo" />

    <Button
        android:id="@+id/button"
        android:fontFamily="@font/mainfont"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="123dp"
        android:backgroundTint="@color/button_color"
        android:text="Continue"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="605dp"
        android:backgroundTint="#151515"
        android:fontFamily="@font/mainfont"
        android:text="return"
        android:textColor="#707070"
        android:textSize="13sp"/>

</FrameLayout>