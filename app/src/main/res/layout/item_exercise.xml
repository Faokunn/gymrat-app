<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#35374F"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="132dp"
            android:layout_height="119dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gymrat_logo" />

        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/exerciseNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F2F3F4"
                android:fontFamily="@font/mainfont"
                android:textSize="15sp" />

            <TextView
                android:fontFamily="@font/mainfont"
                android:id="@+id/groupMuscleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F2F3F4"
                android:textSize="15sp" />

            <TextView
                android:fontFamily="@font/mainfont"
                android:id="@+id/targetMuscleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F2F3F4"
                android:textSize="15sp" />

            <TextView
                android:fontFamily="@font/mainfont"
                android:id="@+id/environmentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F2F3F4"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:fontFamily="@font/mainfont"
                    android:id="@+id/formButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#494b60"
                    android:text="Form"
                    android:textSize="15sp"
                    android:textColor="#F2F3F4" />

                <Button
                    android:id="@+id/addButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#494b60"
                    android:fontFamily="@font/mainfont"
                    android:text="Add"
                    android:textColor="#F2F3F4"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>