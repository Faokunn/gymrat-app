<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/logoFragment">

    <fragment
        android:id="@+id/logoFragment"
        android:name="com.example.gymrat.LogoFragment"
        android:label="fragment_logo"
        tools:layout="@layout/fragment_logo" >
        <action
            android:id="@+id/action_logoFragment_to_intro1Fragment"
            app:destination="@id/intro1Fragment" />
    </fragment>
    <fragment
        android:id="@+id/intro1Fragment"
        android:name="com.example.gymrat.Intro1Fragment"
        android:label="fragment_intro1"
        tools:layout="@layout/fragment_intro1" >
        <action
            android:id="@+id/action_intro1Fragment_to_intro2Fragment"
            app:destination="@id/intro2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/intro2Fragment"
        android:name="com.example.gymrat.Intro2Fragment"
        android:label="fragment_intro2"
        tools:layout="@layout/fragment_intro2" >
        <action
            android:id="@+id/action_intro2Fragment_to_intro1Fragment"
            app:destination="@id/intro1Fragment" />
        <action
            android:id="@+id/action_intro2Fragment_to_genderFragment"
            app:destination="@id/genderFragment" />
    </fragment>
    <fragment
        android:id="@+id/genderFragment"
        android:name="com.example.gymrat.GenderFragment"
        android:label="fragment_gender"
        tools:layout="@layout/fragment_gender" />
</navigation>